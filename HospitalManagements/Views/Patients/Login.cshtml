@model HospitalManagements.Models.Patient

@{
    ViewData["Title"] = "Login";
}

<!-- Include validator.js library -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/validator/13.6.0/validator.min.js"></script>

<style>
    /* Centering the form */
    .login-form {
        max-width: 400px; /* Adjust as needed */
        margin: auto; /* Center align */
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f8f9fa;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Style for form inputs */
    .form-control {
        margin-bottom: 15px;
    }

    /* Button styling */
    .btn-primary {
        width: 100%;
    }

    /* Show/Hide password button styling */
    .show-password {
        cursor: pointer;
        position: absolute;
        right: 10px;
        top: 35px;
        transform: translateY(-50%);
    }

    .password-container {
        position: relative;
    }

    /* Error message styling */
    .error-message {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    /* Forget Password link styling */
    .forget-password-link {
        display: block;
        margin-top: 10px;
        text-align: center;
    }
</style>

<div class="login-form">
    <h1 class="text-center">Login</h1>
    <form asp-action="Login" onsubmit="return validateForm()">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" required />
            <div id="emailError" class="error-message"></div>
        </div>
        <div class="form-group password-container">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" required />
            <span class="show-password" onclick="togglePasswordVisibility()">👁️</span>
            <div id="passwordError" class="error-message"></div>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
        <div id="loginError" class="error-message"></div>
    </form>
    <a href="@Url.Action("ForgetPassword", "Patients")" class="forget-password-link">Forgot Password?</a>
</div>

