@model List<HospitalManagements.Models.Appointment>

@{
    ViewData["Title"] = "Another Doctor Dashboard";
    var checkedAppointmentsCount = Model.Count(a => a.IsChecked);
    var searchQuery = ViewBag.SearchQuery as string; // Retrieve the search query
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Add your custom styles here */
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center">Another Doctor Dashboard</h1>

        <!-- Search Form -->
        <form method="post" asp-action="AnotherDashboard" class="mb-3">
            <div class="input-group">
                <input type="text" name="searchQuery" class="form-control" placeholder="Search Appointments..." value="@searchQuery">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </div>
        </form>

        <!-- Checked Appointments Count -->
        <div class="count-icon mb-3">
            <i class="fa fa-check-circle" aria-hidden="true"></i>
            <span>@checkedAppointmentsCount Checked Patients</span>
        </div>

        
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
